<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <style>
      .circle-img {
        border-radius: 10%;
        object-fit: cover;
      }
    </style>
    
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="/<%= blog.coverImageURL %>" width="700px" />

      <pre class="mt-3"> <%= blog.body %></pre>
      
    </div>

    <div class="container mt-4">
      <img class="circle-img" src="/<%=blog.createdBy.profileImageURL %>" width="50px" /> <%= blog.createdBy.fullName %></pre>
      
    </div>

    <div class="container mt-3">
      <h1>Comment (<%= comments.length %>)</h1>

        <% if (locals.user) { %>
         
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input
                    type="text"
                    name="content"
                    class="form-control"
                    placeholder="Enter Your Comment"
                  />
                  <button class="btn btn-sm btn-primary mt-1" type="submit"> Add</button>
                </div>
              </form>

        <% } %>

        <div class="mt-3">
          <% comments.forEach(comment => { %>
           <div>
            <img class="circle-img" src="/<%=comment.createdBy.profileImageURL %>" width="50px" />
            <%= comment.createdBy.fullName %>
             <pre>Comment :-  <%= comment.content %></pre>
    
           </div>
    
          <% }) %>
    
        </div>
    </div>





    <%- include("./partials/script") %>
  </body>
</html>
