<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <time datetime="Home"></time>

    <style>
      body {
        background-color: #f8f9fa; /* Light background for contrast */
      }
      .card {
        width: 100%; /* Allow flexibility within the grid */
        display: flex;
        flex-direction: column;
        margin-bottom: 1.5rem;
        border: none; /* Remove default border */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Soft shadow */
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .card:hover {
        transform: translateY(-5px); /* Slight lift on hover */
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Enhanced shadow */
      }
      .card-img-top {
        width: 100%; /* Ensure the image takes up full width */
        height: 15rem; /* Set a fixed height for consistency */
        object-fit: contain; /* Ensure the entire image fits without cropping */
        background-color: #f0f0f0; /* Add a neutral background if the image doesnâ€™t cover the space */
        border-top-left-radius: 0.5rem; /* Rounded corners */
        border-top-right-radius: 0.5rem;
      }
      .card-body {
        padding: 1rem; /* Add spacing inside the card */
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background: #ffffff; /* Clean background for text readability */
        border-bottom-left-radius: 0.5rem; /* Match corners */
        border-bottom-right-radius: 0.5rem;
      }
      .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-align: center; /* Center-align the title */
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.2s ease-in-out;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/script") %>
  </body>
</html>
